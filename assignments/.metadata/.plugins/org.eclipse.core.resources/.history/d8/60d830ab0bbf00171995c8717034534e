package com.revature.BankingSystem.BankingUI;

import java.util.Scanner;

public class MainMenu extends UIElement{
	
	public MainMenu() {
		super();
	}
	
	public void mainMenu() {
		boolean mmFlag = true;
		
		
		do {
			
			System.out.println("\n1 - Manage Accounts" + "\n0 - Log Out\n");
			int mmInput = getUIn().getInt();
			
			switch(mmInput) {
			case 0:
				break;
			case 1:
				break;
			default:
				break;
			}
		}while(mmFlag);
		
		userInput.close();
	}
}
