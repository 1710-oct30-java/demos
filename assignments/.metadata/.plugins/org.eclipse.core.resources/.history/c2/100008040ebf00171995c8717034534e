package com.revature.BankingSystem.BankingUI;

import java.util.ArrayList;

import com.revature.BankingSystem.BankClasses.*;

public class MenuControl {
	
	private  User currentUser;
	ArrayList<User> userList;
	
	private AccountManager accMan;
	private UserLogin uLogin;
	private MainMenu mm;
	
	public MenuControl(ArrayList<User> uList) {
		uLogin = new UserLogin();
		userList = uList;
		currentUser = uLogin.login(userList);
	}
	public void mainMenu() {
		mm = new MainMenu();
		mm.mainMenu(currentUser);
	}

}
