package com.revature.BankingSystem.BankingUI;

import java.util.ArrayList;
import java.util.Scanner;

import com.revature.BankingSystem.BankClasses.*;


public class UserLogin {
	
	private static ArrayList<User> userList;
	private static User userEntering;
	
	public static void login(ArrayList<User> uList) {
		userList = uList;
		boolean displayFlag = true;
		Scanner userInput = new Scanner(System.in);
		
		String uName = null;
		do {
			System.out.print("Enter Username: ");
			uName = userInput.nextLine();
			if(usernameValidation(uName)) {
				displayFlag = false;
			}else {
				System.out.print("Invalid Username\n");
			}
		}while(displayFlag);
		
		String uPassword = null;
		do {
			System.out.print("Enter Password: ");
			uName = userInput.nextLine();
			if(usernameValidation(uName)) {
				displayFlag = false;
			}else {
				System.out.print("Invalid Username/Password Combonation\n");
			}
		}while(displayFlag);
		
		userInput.close();
		
	}
	
	public static boolean usernameValidation(String uName) {
		for(User ele : userList) {
			if(ele.getUserName().equals(uName)) {
				userEntering = ele;
				return true;
			}
		}
		return false;
	}
}
