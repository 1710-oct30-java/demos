package com.revature.BankingSystem.BankClasses;

public class Account {
	private int accId;
	private String accType;
	private double accBalance;
	private User accOwner;
	private static int numberOfAccounts;

	public Account(int accId, String accType, double accBalance, User accOwner) {
		super();
		this.accId = accId;
		this.accType = accType;
		this.accBalance = accBalance;
		this.accOwner = accOwner;
		if(numberOfAccounts != null) {
			accId = numberOfAccounts;
			numberOfAccounts++;
			
		}else {
			numberOfAccounts = 1;
			accId = 0;
		}
	}

	public int getAccId() {
		return accId;
	}

	public void setAccId(int accId) {
		this.accId = accId;
	}

	public String getAccType() {
		return accType;
	}

	public void setAccType(String accType) {
		this.accType = accType;
	}

	public double getBalance() {
		return accBalance;
	}

	public void setBalance(double Balance) {
		this.accBalance = Balance;
	}

	public User getAccOwner() {
		return accOwner;
	}

	public void setAccOwner(User accOwner) {
		this.accOwner = accOwner;
	}

	@Override
	public String toString() {
		return "Account [accId=" + accId + ", accType=" + accType + ", Balance=" + accBalance + "]";
	}

}
