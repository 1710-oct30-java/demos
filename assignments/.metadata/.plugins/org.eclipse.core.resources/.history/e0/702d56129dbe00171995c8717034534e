package com.revature.BankingSystem.BankingUI;

import java.util.Scanner;

public class AccountManager {

	private Scanner userInput;

	public boolean AccounManagment() {
		userInput = new Scanner(System.in);
		boolean accManageFlag = true;

		do {
			System.out.print("1 - Deposit into account" + "\n2 - Withdraw from account" + "\n3 - Create new account"
					+ "\n4 - Teriminate exsiting account" + "\n0 - Exit account management");
			int userMenu = userInput.nextInt();

			switch (userMenu) {
			case 0:
				break;
			case 1:
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				break;
			default:
				break;
			}

		} while (accManageFlag);

		userInput.close();
		return true;
	}
}
